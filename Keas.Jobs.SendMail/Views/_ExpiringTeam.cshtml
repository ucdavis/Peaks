@using System.Collections
@using Keas.Core.Domain
@using Keas.Core.Extensions
@using Keas.Jobs.SendMail.Views.Shared
@model Keas.Core.Models.ExpiringItemsEmailModel
@{
    Layout = "_EmailLayout";
    var teamName = Model.Person.Team.Name;
    var teamSlug = Model.Person.Team.Slug;
    var tempCount = Model.KeySerials.Count() + Model.Equipment.Count() + Model.Workstations.Count() + Model.AccessAssignments.Count();
    var count = tempCount.ToString();
    var itemPluralize = "item";
    if (tempCount > 1)
    {
        itemPluralize = "items";
    }
    var @accessCount = Model.AccessAssignments.Count();
    var @keyCount = Model.KeySerials.Count();
    var @equipmentCount = Model.Equipment.Count();
    var @workstationCount = Model.Workstations.Count();

}

    <mj-section border-top="4px solid #203F60" border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="20px" padding-top="20px">
      <mj-column width="100%" vertical-align="top">
        <mj-text padding-top="0px" padding-bottom="0px" font-size="20px" line-height="25px" color="#1F1F1F">
          The team @teamName has @count expiring @itemPluralize in PEAKS.
        </mj-text>
       
      </mj-column>
    </mj-section>
        
    @if (accessCount > 0)
    {
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="0px" padding-top="10px">
        <mj-column width="90%" vertical-align="top">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
          <h2>Access</h2>
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="20px" padding-top="0px">
        <mj-column width="90%" vertical-align="top" border-left="4px solid #203F60" padding-left="10px">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
            <p><b>@accessCount</b> expiring @(accessCount == 1 ? "item" : "items")</p>
          </mj-text>
        </mj-column>      
      </mj-section>
    }

    @if (keyCount > 0)
    {
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="0px" padding-top="10px">
        <mj-column width="90%" vertical-align="top">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
          <h2>Keys</h2>
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="20px" padding-top="0px">
        <mj-column width="90%" vertical-align="top" border-left="4px solid #203F60" padding-left="10px">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
            <p><b>@keyCount</b> expiring @(keyCount == 1 ? "item" : "items")</p>
          </mj-text>
        </mj-column>      
      </mj-section>
    }

    @if (equipmentCount > 0)
    {
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="0px" padding-top="10px">
        <mj-column width="90%" vertical-align="top">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
          <h2>Equipment</h2>
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="20px" padding-top="0px">
        <mj-column width="90%" vertical-align="top" border-left="4px solid #203F60" padding-left="10px">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
            <p><b>@equipmentCount</b> expiring @(equipmentCount == 1 ? "item" : "items")</p>
          </mj-text>
        </mj-column>      
      </mj-section>
    }

    @if (workstationCount > 0)
    {
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="0px" padding-top="10px">
        <mj-column width="90%" vertical-align="top">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
          <h2>Workstations</h2>
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-section border-left="1px solid #c7c8cc" border-right="1px solid #c7c8cc" background-color="#ffffff" padding-bottom="20px" padding-top="0px">
        <mj-column width="90%" vertical-align="top" border-left="4px solid #203F60" padding-left="10px">
          <mj-text padding-top="0px" padding-left="0px" padding-bottom="0px">
            <p><b>@workstationCount</b> expiring @(workstationCount == 1 ? "item" : "items")</p>
          </mj-text>
        </mj-column>      
      </mj-section>
    }

    @await Html.PartialAsync("_EmailButton", new EmailButtonModel 
    {
      Url = $"https://peaks.ucdavis.edu/{teamSlug}/Report",
      ButtonText = "View Detailed Report",
      Description = "Please review the full details, and then contact the assigned individuals to either update the expiration date or return/check-in the items.",
    });
