@model Keas.Core.Domain.Team
@{
    ViewData["Title"] = "Create";
}
<div class="card">
    <div class="card-head">
        <div class="row justify-content-between">
            <h2>Create Team</h2>
            <a class="btn btn-link" asp-controller="Admin" asp-action="Index"><i class="fas fa-arrow-left fa-xs" /></i> Back to List</a>
        </div>
    </div>
    <div class="card-content">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slug" class="control-label"></label>
                        <input asp-for="Slug" class="form-control" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                        <span id="slugUrl"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            var dirtySlug = false;
            $('#Name').keyup(function () {
                if (dirtySlug) {
                    return;
                }
                var slug = $(this).val();
                slug = slug.replace(/[\W_]/g, '-');
                slug = slug.replace(/--*/g, '-');
                slug = slug.trim('-');
                slug = slug.toLowerCase();

                $('#Slug').val(slug);
                updateSlugUrl();
            });

            $('#Slug').change(function () {
                dirtySlug = true;
                updateSlugUrl();
            });

            function updateSlugUrl() {
                var slug = $('#Slug').val();
                $('#slugUrl').text("https://keas.ucdavis.edu/" + slug);
            }
        });
    </script>
}
